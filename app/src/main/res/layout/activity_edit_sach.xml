<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditSachActivity"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imagChonSachE"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/yeulayeuthethoi"/>
    <EditText
        android:id="@+id/edtTenSachE"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sách"/>
    <EditText
        android:id="@+id/edtTenTacGiaE"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên tác giả"/>
    <EditText
        android:id="@+id/edtTheLoaiE"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thể loại"/>
    <EditText
        android:id="@+id/edtMoTaE"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"/>
    <EditText
        android:id="@+id/edtGiaSachE"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá sách"/>

    <Button
        android:id="@+id/btnSua"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật"/>




</LinearLayout>